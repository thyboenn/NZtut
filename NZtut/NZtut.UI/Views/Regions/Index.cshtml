@model IEnumerable<NZtut.UI.Models.DTO.RegionDTO>


@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Region Id</th>
			<th>Region Code</th>
			<th>Region Name</th>
			<th>e</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var region in Model)
		{
			<tr>
				<td>@region.Id</td>
				<td>@region.Code</td>
				<td>@region.Name</td>
				<td>
					<a class="btn btn-light" asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
			</tr>
		}
	</tbody>
